<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/sticker_qty"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/circle"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="10dp"
        android:textColor="@color/red_qatar"
        android:translationZ="10dp"
        android:visibility="gone"
        tools:text="2"/>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/figurita"
    android:layout_width="100dp"
    android:layout_height="140dp"
    android:layout_marginTop="15dp"
    android:layout_marginEnd="20dp"
    android:layout_marginStart="10dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:background="@drawable/border_figurita">

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/qatar_icon"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <LinearLayout
        android:layout_width="25dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <TextView
            android:id="@+id/nationality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="5sp"
            android:textStyle="bold"
            tools:text="ARG"
            android:gravity="center"
            android:textColor="@color/red_qatar"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/imagePais"
            android:layout_gravity="center"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:src="@drawable/arg"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="Kg"
                android:textSize="5sp"
                android:gravity="center"
                android:layout_weight="2"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="5sp"
                android:gravity="center"
                android:layout_weight="2"
                android:text="Mt"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            >
            <TextView
                android:id="@+id/pesoJugador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/white"
                tools:text="72"
                android:textSize="7sp"
                android:gravity="center"
                android:layout_weight="2"
                />
            <TextView
                android:id="@+id/alturaJugador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="7sp"
                android:layout_marginStart="1dp"
                android:gravity="center"
                android:layout_weight="2"
                tools:text="1,70"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/imagenJugador"
            android:layout_width="match_parent"
            android:layout_height="90dp"/>

        <TextView
            android:id="@+id/nombreJugador"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:background="@drawable/nombre"
            android:gravity="center"
            android:textStyle="bold"
            tools:text="LIONEL MESSI"
            android:textColor="@color/red_qatar"
            android:textSize="7sp" />

        <TextView
            android:id="@+id/birthdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/red_qatar"
            tools:text="24-6-1987"
            android:textColor="@color/white"
            android:textSize="5sp"
            android:textStyle="bold"
            />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>