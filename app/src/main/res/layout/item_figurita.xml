<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="200dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/figurita"
        android:layout_width="130dp"
        android:layout_height="180dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:background="@drawable/border_figurita">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/qatar_icon"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <LinearLayout
        android:layout_width="30dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="8dp"
            android:textStyle="bold"
            android:text="ARG"
            android:gravity="center"
            android:textColor="@color/red_qatar"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/imagePais"
            android:layout_gravity="center"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:src="@drawable/arg"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="Kg"
                android:textSize="9dp"
                android:gravity="center"
                android:layout_weight="2"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="9dp"
                android:gravity="center"
                android:layout_weight="2"
                android:text="Mt"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            >
            <TextView
                android:id="@+id/pesoJugador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="72"
                android:textSize="8dp"
                android:gravity="center"
                android:layout_weight="2"
                />
            <TextView
                android:id="@+id/alturaJugador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="8dp"
                android:layout_marginStart="1dp"
                android:gravity="center"
                android:layout_weight="2"
                android:text="1,70"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/imagenJugador"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            />

        <TextView
            android:id="@+id/nombreJugador"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@drawable/nombre"
            android:gravity="center"
            android:textStyle="bold"
            android:text="LIONEL MESSI"
            android:textColor="@color/red_qatar"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/fechaNacimiento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/red_qatar"
            android:text="24-6-1987"
            android:textColor="@color/white"
            android:textSize="7dp"
            android:textStyle="bold"
            />

    </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>